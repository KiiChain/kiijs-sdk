{
  "name": "kiijs-sdk",
  "version": "0.1.1",
  "author": "kiiglobal.io <dev@kiiglobal.io>",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/KiiChain/kiijs-sdk"
  },
  "overrides": {
    "chalk": "5.3.0",
    "strip-ansi": "7.1.0",
    "color-convert": "2.0.1",
    "color-name": "1.1.4",
    "is-core-module": "2.13.1",
    "error-ex": "1.3.2",
    "has-ansi": "5.0.1"
  },
  "license": "SEE LICENSE IN LICENSE",
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build --stream --sort",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "pretty": "yarn prettier --write '**/*.{ts,tsx}' --ignore-path .prettierignore",
    "test": "lerna run test --stream --sort",
    "test:evm": "cd packages/evm && yarn test",
    "test:proto": "cd packages/proto && yarn test",
    "test:utils": "cd packages/utils && yarn test",
    "test:rwa": "cd packages/rwa && yarn test",
    "test:ci": "lerna run test:ci --stream --sort",
    "test:evm:ci": "cd packages/evm && yarn test:ci",
    "test:proto:ci": "cd packages/proto && yarn test:ci",
    "codegen": "lerna run codegen --stream --scope kiijs-sdk",
    "symlink": "symlink-workspace --logLevel error",
    "postinstall": "yarn symlink"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "jest": "^29.6.2",
    "lerna": "^6",
    "prettier": "3.6.2",
    "rimraf": "4.4.1",
    "strip-ansi": "7.1.0",
    "symlink-workspace": "^1.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6"
  },
  "packageManager": "yarn@4.10.3"
}
